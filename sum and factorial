import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int mul=1 ;
        int sum=0 ;
        for (int i = 1; i<=a;){
            mul *= i;
            sum += i++;
        }
        System.out.println(sum);
        System.out.println(mul);
        sc.close();
    }
}
